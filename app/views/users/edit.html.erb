<div class="content">
  <h2 class="content-head is-center">修改个人信息.</h2>

  <div class="pure-g">
      <div class="l-box-lrg pure-u-1 pure-u-md-1-5"></div>

      <div class="l-box-lrg pure-u-1 pure-u-md-3-5">
          <%= simple_form_for(@user) do |f| %>
          <fieldset>
            <%= render 'shared/error_messages' %>
            <!--修改用户头像-->
            <%= f.input :avatar, label: '头像', as: :file %>
            <%= f.input :name, label: '姓名' %>
            <%= f.input :email, label: '邮箱' %>
            <%= f.input :phonenumber, label: '电话'%>
            <%= f.input :password, label: '密码', hint: false, error_html: { id: 'password_error'} %>
            <%#= f.input :password_confirmation %>
            <%= f.button :submit, '保存修改', class: "btn-primary" %>
          </fieldset>
          <% end %>
      </div>
     <div class="l-box-lrg pure-u-1 pure-u-md-1-5"></div>
  </div>

</div>

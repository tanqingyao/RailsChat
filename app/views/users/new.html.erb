<div class="content">
  <h2 class="content-head is-center">欢迎你！新用户请注册.</h2>

  <div class="pure-g">
      <div class="l-box-lrg pure-u-1 pure-u-md-1-3"></div>

      <div class="l-box-lrg pure-u-1 pure-u-md-1-3">
          <%= simple_form_for @user, class:'pure-form pure-form-stacked' do |f| %>
          <fieldset>
              <%= render 'shared/error_messages' %>

              <%= f.input :name %>
              <%= f.input :email %>
              <%= f.input :phonenumber%>
              <%= f.input :password, placeholder: '请输入密码', hint: '不少于6个字符' %>

              <%= f.button :submit, "创建用户", class: "pure-button" %>
              </fieldset>
          <% end %>
      </div>
     <div class="l-box-lrg pure-u-1 pure-u-md-1-3"></div>
  </div>

</div>
